{
  "name": "forge-gui",
  "version": "0.1.0",
  "main": "main/main.js",
  "scripts": {
    "react-start": "npm run start --prefix interface-frontend",
    "electron-start": "cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "build-react": "npm run build --prefix interface-frontend",
    "electron-build": "electron-builder",
    "build": "npm run build-react && npm run electron-build"
  },
  "build": {
    "appId": "com.example.forgegui",
    "files": [
      "dist/**",
      "main/**"
    ],
    "directories": {
      "output": "release"
    }
  },
  "devDependencies": {
    "electron": "^32.1.0",
    "electron-builder": "^25.0.5",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "wait-on": "^8.0.1"
  }
}
